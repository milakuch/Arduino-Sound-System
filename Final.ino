const int ledpin = 13;const int soundpin = A2;const int threshold = 200;const int buttonpin = A5;void setup() {  Serial.begin(9600);  pinMode(ledpin, OUTPUT);  pinMode(soundpin, INPUT);  pinMode(ledpin, OUTPUT);  pinMode(buttonpin, INPUT_PULLUP)}void loop() {  //поради тоа што задачите не зависат една од друга нема потреба да ставаме заеднички ifови  int input = analogRead(soundpin);  if (input >= threshold){    digitalWrite(ledpin,HIGH);    delay(1000);  }  else  {    digitalWrite(ledpin, LOW);  }    if (digitalRead(buttonpin) == LOW){    digitalWrite(ledpin, HIGH);    delay(1000);  }  else{    digitalWrite(ledpin,LOW)  }}